@page
@model Shop.UI.Pages.Checkout.CustomerInformationModel
@{
}

    <div class="columns">
        <div class="column is-4">
            <form method="post">

                <div class="field">
                    <p class="control">
                        <label class="label">First Name</label>
                        <input class="input" asp-for="CustomerInformation.FirstName" />
                    </p>
                    <span style="color:Red" asp-validation-for="CustomerInformation.FirstName"></span>
                </div>

                <div class="field">
                    <p class="control">

                        <label class="label">Last Name</label>

                        <input class="input" asp-for="CustomerInformation.LastName" />
                    </p>
                    <span style="color:Red" asp-validation-for="CustomerInformation.LastName"></span>
                </div>

                <div class="field">
                    <p class="control">
                        <label class="label">Email</label>

                        <input class="input" asp-for="CustomerInformation.Email" />
                    </p>

                    <span style="color:Red" asp-validation-for="CustomerInformation.Email"></span>
                </div>

                <div class="field">
                    <p class="control">
                        <label class="label">Phone Number</label>

                        <input class="input" asp-for="CustomerInformation.PhoneNumber" />
                    </p>

                    <span style="color:Red" asp-validation-for="CustomerInformation.PhoneNumber"></span>
                </div>

                <div class="field">
                    <p class="control">
                        <label class="label">Address</label>

                        <input class="input" asp-for="CustomerInformation.Address1" />
                    </p>

                    <span style="color:Red" asp-validation-for="CustomerInformation.Address1"></span>
                </div>

                <div class="field">
                    <p class="control">
                        <label class="label">Secondary Address</label>
                        @*<font size="2" color="blue">Optional</font>*@
                        <input class="input" asp-for="CustomerInformation.Address2" />
                    </p>

                    <span style="color:Red" asp-validation-for="CustomerInformation.Address2"></span>
                </div>

                <div class="field">
                    <p class="control">
                        <label class="label">City</label>

                        <input class="input" asp-for="CustomerInformation.City" />
                    </p>

                    <span style="color:Red" asp-validation-for="CustomerInformation.City"></span>
                </div>

                <div class="field">
                    <p class="control">
                        <label class="label">PostCode</label>

                        <input class="input" asp-for="CustomerInformation.PostCode" />
                    </p>

                    <span style="color:Red" asp-validation-for="CustomerInformation.PostCode"></span>
                </div>
                <div class="field">

                    <button class="button is-success" type="submit">Submit</button>
                </div>
            </form>
        </div>
        <div class="column is-4">

        <vc:cart view="Huge"></vc:cart>
        </div>
    </div>
